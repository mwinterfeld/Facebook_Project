<h1>Search Results</h1>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Country</th>
    <th>Link to Profile</th>
  </tr>

<% if (@profiles) then %>
<% @profiles.each do |id| %>
  <tr>
    <td><%= id[:first_name]%></td>
    <td><%= id[:last_name]%></td>
    <td><%= id[:country]%></td>
    <% if(session[:user][:friends].find_index(id[:username])) then %>
    <td><%= link_to 'Link to Profile', public_profiles_path(id[:user_id]) %>
    <% else %>
    <td><%= link_to 'Link to Profile', private_profiles_path(id[:user_id]) %>
    <% end %>
    </td>
  </tr>
<% end %>
<% end %>
</table>
<div>
  <p>
  <%= link_to 'NewsFeed', posts_path %> 
  </p>
</div>

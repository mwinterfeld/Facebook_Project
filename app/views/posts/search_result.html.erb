<h1>Search Results</h1>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Country</th>
    <th>Link to Profile</th>
  </tr>

<% if (@profiles) then %>
<% @friends.each do |id| %>
  <tr>
    <td><%= id[:first_name].capitalize%></td>
    <td><%= id[:last_name].capitalize%></td>
    <td>
      <% if id[:country] then %>
      <%= id[:country].capitalize%>
    <% end%>
    </td>
    <td><%= link_to 'Link to Profile', private_profiles_path(id[:user_id]) %>
    </td>
  </tr>
<% end %>
<% @enemies.each do |id| %>
  <tr>
    <td><%= id[:first_name].capitalize%></td>
    <td><%= id[:last_name].capitalize%></td>
    <td>
      <% if id[:country] then %>
      <%= id[:country].capitalize%>
    <% end%>
    <td><%= link_to 'Link to Profile', public_profiles_path(id[:user_id]) %>
    </td>
  </tr>
<% end %>
<% end %>
</table>
<div>
  <p>
  <%= link_to 'NewsFeed', posts_path %> 
  </p>
</div>
